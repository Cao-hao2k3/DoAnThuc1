@model ThanTai.Models.BanTin

<h2>Thêm tin tức</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Slug" class="control-label"></label>
        <input asp-for="Slug" class="form-control" />
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="control-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="DuLieuHinhAnhImage" class="control-label"></label>
        <input asp-for="DuLieuHinhAnhImage" accept="image/jpeg,image/gif,image/png,image/jpg" class="form-control" />
        <span asp-validation-for="DuLieuHinhAnhImage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DuLieuHinhAnhBanner" class="control-label"></label>
        <input asp-for="DuLieuHinhAnhBanner" accept="image/jpeg,image/gif,image/png,image/jpg" class="form-control" />
        <span asp-validation-for="DuLieuHinhAnhBanner" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content">Nội dung:</label>
        <textarea id="editor" asp-for="Content" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>

<script src="~/lib/ckeditor5/ckeditor.js"></script>
<script>
    ClassicEditor.create(document.querySelector('#editor'))
        .catch(error => console.error(error));
</script>
