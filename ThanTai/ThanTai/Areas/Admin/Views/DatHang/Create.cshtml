@model ThanTai.Models.DatHang

@{
    ViewData["Title"] = "Thêm đơn hàng";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="NguoiDungID" class="control-label"></label>
                <select asp-for="NguoiDungID" class="form-control" asp-items="ViewBag.NguoiDung">
                    <option value="">-- Chọn người dùng --</option>
                </select>
                <span asp-validation-for="NguoiDungID" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="TenNguoiDat" class="control-label"></label>
                <input asp-for="TenNguoiDat" class="form-control" />
                <span asp-validation-for="TenNguoiDat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DienThoaiNguoiDat" class="control-label"></label>
                <input asp-for="DienThoaiNguoiDat" class="form-control" />
                <span asp-validation-for="DienThoaiNguoiDat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DiaChiGiaoHang" class="control-label"></label>
                <input asp-for="DiaChiGiaoHang" class="form-control" />
                <span asp-validation-for="DiaChiGiaoHang" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgayDatHang" class="control-label"></label>
                <input asp-for="NgayDatHang" class="form-control" type="date" />
                <span asp-validation-for="NgayDatHang" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TinhTrangThanhToan" class="control-label"></label>
                <select asp-for="TinhTrangThanhToan" class="form-control">
                    <option value="1">Chưa thanh toán</option>
                    <option value="2">Đã thanh toán</option>
                </select>
                <span asp-validation-for="TinhTrangThanhToan" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TinhTrangID" class="control-label"></label>
                <select asp-for="TinhTrangID" class="form-control" asp-items="ViewBag.TinhTrangID"></select>
                <span asp-validation-for="TinhTrangID" class="text-danger"></span>
            </div>

            <div class="mb-0">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Thêm mới
                </button>
                hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
