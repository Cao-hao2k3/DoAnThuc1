@model ThanTai.Models.KhuyenMai

@{
    ViewData["Title"] = "Xóa khuyến mãi";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />

            <div class="alert alert-danger" role="alert">
                <i class="fa-solid fa-triangle-exclamation"></i>
                Bạn có muốn xóa khuyến mãi của sản phẩm <strong>@Model.SanPham?.TenSanPham</strong> không?
            </div>

            <dl class="row">
                <dt class="col-sm-3">Ngày bắt đầu:</dt>
                <dd class="col-sm-9">@Model.NgayBatDau.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-3">Ngày kết thúc:</dt>
                <dd class="col-sm-9">@Model.NgayKetThuc.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-3">Số lượng:</dt>
                <dd class="col-sm-9">@Model.SoLuong</dd>

                <dt class="col-sm-3">Mô tả:</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>

                <dt class="col-sm-3">Kiểu khuyến mãi:</dt>
                <dd class="col-sm-9">
                    @if (Model.KieuKhuyenMai == 0)
                    {
                        @:Giảm theo phần trăm (%)
                    }
                    else if (Model.KieuKhuyenMai == 1)
                    {
                        @:Giảm theo số tiền
                    }
                    else if (Model.KieuKhuyenMai == 2)
                    {
                        @:Mua 1 tặng 1
                    }
                </dd>

                <dt class="col-sm-3">Giá trị giảm:</dt>
                <dd class="col-sm-9">@Model.GiaTriGiam</dd>

                <dt class="col-sm-3">Trạng thái:</dt>
                <dd class="col-sm-9">
                    @if (Model.TrangThai == 1)
                    {
                        @:Đang áp dụng
                    }
                    else
                    {
                        @:Ngừng áp dụng
                    }
                </dd>
            </dl>

            <div class="mb-0">
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-circle-check"></i> Xác nhận xóa
                </button>
                hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>
