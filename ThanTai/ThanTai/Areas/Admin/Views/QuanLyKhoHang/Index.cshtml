@model IEnumerable<ThanTai.Models.SanPham>

@{
    ViewData["Title"] = "Quản lý kho sản phẩm";
}

<div class="container">
    <h1 class="my-4">Quản lý kho sản phẩm</h1>

    <!-- Nút thêm sản phẩm -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm sản phẩm mới</a>
    </p>

    <!-- Bảng danh sách sản phẩm -->
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.TenSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.DonGia)</th>
                <th>@Html.DisplayNameFor(model => model.SoLuong)</th>
                <th>@Html.DisplayNameFor(model => model.GiamGia)</th>
                <th>@Html.DisplayNameFor(model => model.GiaSauKhiGiam)</th>
                <th>@Html.DisplayNameFor(model => model.LoaiSanPham)</th>
                <th>@Html.DisplayNameFor(model => model.ThuongHieu)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ID)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiamGia)%</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaSauKhiGiam)</td>
                    <td>@(item.LoaiSanPham)</td>
                    <td>@(item.ThuongHieu?.TenThuongHieu ?? "Chưa xác định")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CSS tùy chỉnh (tùy chọn) -->
<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .btn {
        margin-right: 5px;
    }
</style>