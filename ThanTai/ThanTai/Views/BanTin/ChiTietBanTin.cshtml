@model ThanTai.Models.BanTin

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <h2 class="fw-bold">@Model.Title</h2>

    <div class="text-center my-3">
        <img src="@Model.Banner" class="img-fluid" alt="@Model.Title">
    </div>

    <div class="mt-3">
        <p class="text-muted">Danh mục: @Model.Category | Ngày đăng: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
        <div class="border p-3">
            @Html.Raw(Model.Content) <!-- Hiển thị nội dung bản tin có thể chứa HTML -->
        </div>
    </div>

    <a href="@Url.Action("Index", "BanTin")" class="btn btn-primary mt-3">Quay lại danh sách</a>
</div>
