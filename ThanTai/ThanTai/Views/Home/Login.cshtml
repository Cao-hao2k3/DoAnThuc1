@model ThanTai.Models.DangNhap
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h4 class="text-uppercase fw-bold mb-3">Đăng Nhập</h4>
                <p class="text-muted">Điền thông tin tài khoản đăng nhập</p>

                @if (TempData["ThongBaoLoi"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ThongBaoLoi"]
                    </div>
                }

                <form asp-action="Login">
                    <input type="hidden" asp-for="LienKetChuyenTrang" value="@ViewBag.LienKetChuyenTrang" />

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label fw-bold">Nhập tài khoản <span class="text-danger">*</span></label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tài khoản" required />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">
                            <i class="fa-solid fa-lock"></i> Đăng nhập
                        </button>
                    </div>

                    <p class="mt-3 text-danger fw-bold">* Bắt buộc điền thông tin</p>

                    <p class="mt-3 text-center">
                        Chưa có tài khoản ? <a asp-action="Register" asp-controller="Home">Đăng ký ngay</a>
                    </p>

                    <p class="mt-3 text-center">
                        <a asp-action="Index" asp-controller="ForgotPassword">Quên mật khẩu</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}