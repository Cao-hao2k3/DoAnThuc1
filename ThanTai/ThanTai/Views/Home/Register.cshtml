@model ThanTai.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h4 class="text-uppercase fw-bold mb-3 text-center">Đăng Ký</h4>
                <p class="text-muted text-center">Điền thông tin để tạo tài khoản</p>

                @if (TempData["ThongBaoLoi"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fa-solid fa-triangle-exclamation"></i> @TempData["ThongBaoLoi"]
                    </div>
                }

                @if (ViewBag.ThongBaoThanhCong != null)
                {
                    <div class="alert alert-success text-center mt-3">
                        <i class="fa-solid fa-circle-check"></i> @ViewBag.ThongBaoThanhCong
                    </div>

                    <script>
                        setTimeout(function () {
                            window.location.href = '@Url.Action("Login", "Home")';
                        }, 3000); // 3 giây
                    </script>
                }

                <form asp-action="Register" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="HoVaTen" class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                        <input asp-for="HoVaTen" class="form-control" placeholder="Nhập họ và tên" required>
                        <span asp-validation-for="HoVaTen" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DienThoai" class="form-label fw-bold">Số điện thoại <span class="text-danger">*</span></label>
                        <input asp-for="DienThoai" class="form-control" placeholder="Nhập số điện thoại" required>
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiaChi" class="form-label fw-bold">Địa chỉ <span class="text-danger">*</span></label>
                        <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" required>
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label fw-bold">Tên đăng nhập <span class="text-danger">*</span></label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" required>
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" required>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="XacNhanMatKhau" class="form-label fw-bold">Nhập lại mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="XacNhanMatKhau" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required>
                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DuLieuHinhAnh" class="form-label fw-bold">Ảnh đại diện</label>
                        <input asp-for="DuLieuHinhAnh" type="file" class="form-control">
                    </div>

                    <p class="mt-2 text-danger fw-bold">* Bắt buộc điền thông tin</p>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">
                            <i class="fa-solid fa-user-plus"></i> Đăng ký
                        </button>
                    </div>            
                </form>
                <p class="mt-3 text-center">
                    Đã có tài khoản? <a asp-action="Login" asp-controller="Home">Đăng nhập ngay</a>
                </p>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
