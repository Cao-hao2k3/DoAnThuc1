@{
    ViewData["Title"] = "Home Page";
}
<!-- Import Bootstrap và Font Awesome nếu cần -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="text-center">
    <!-- Start Banner Hero -->
    <div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Banner 1 -->
            <div class="carousel-item active" data-bs-interval="3000">
                <img class="img-fluid banner-img w-100" src="~/img/banner1.png" alt="Banner 1">
            </div>
            <!-- Banner 2 -->
            <div class="carousel-item" data-bs-interval="3000">
                <img class="img-fluid banner-img w-100" src="~/img/banner2.png" alt="Banner 2">
            </div>
        </div>

        <!-- Nút điều hướng -->
        <button class="carousel-control-prev" type="button" data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!-- End Banner Hero -->
</div>

<div style="margin-top: 50px" class="bg-danger text-white text-center fw-bold text-uppercase py-3 fs-2">
    ĐIỆN MÁY KHẢI DUYÊN
</div>

<div class="container mt-4">
    <h4><strong>Khuyến mãi Online</strong></h4>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-6 g-3">
        <!-- Sản phẩm 1 -->
        <div class="col">
            <div class="card h-100 p-2">
                <!-- Ảnh sản phẩm -->
                <img src="https://via.placeholder.com/250x200.png?text=Product+Image" class="card-img-top" alt="Daikin Inverter 1 HP">
                <!-- Thân card -->
                <div class="card-body text-center">
                    <!-- Tên sản phẩm -->
                    <h6 class="card-title text-truncate">Daikin Inverter 1 HP ATK25SVMV</h6>

                    <!-- Giá cũ & Giá mới -->
                    <p class="mb-0 text-muted">
                        <s>10.390.000đ</s>
                    </p>
                    <p class="fw-bold text-danger">
                        9.750.000đ
                        <span class="badge bg-danger">-6%</span>
                    </p>

                    <!-- Số suất còn lại (icon vàng hoặc lửa) -->
                    <p class="mb-2 text-warning">
                        <i class="fa-solid fa-fire"></i> Còn 22/50 suất
                    </p>

                    <!-- Nút mua -->
                    <a href="#" class="btn btn-primary btn-sm">Mua ngay</a>
                </div>
            </div>
        </div>
    </div>
    <h4><strong>Bản tin</strong></h4>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card promo-card">
                    <img src="image.png" alt="Khuyến mãi Điện Máy Xanh">
                    <div class="promo-text">
                        Đón hè mát lạnh!! Điện máy XANH tung triệu DEAL bất ngờ qua app QUÀ TẶNG VIP
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

