@{
    ViewData["Title"] = "Giỏ Hàng Trống";
}

<div class="container d-flex flex-column align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px;">
        <!-- Hình ảnh giỏ hàng trống -->
        <div class="d-flex justify-content-center">
            <img class="img-fluid mb-3" src="@Url.Content("~/uploads/cart-empty.png")" alt="Giỏ hàng trống" style="width: 180px; height: auto;">
        </div>

        <h2 class="fw-bold text-dark">Giỏ hàng của bạn trống!</h2>
        <p class="text-muted">Hãy nhanh tay chọn ngay sản phẩm yêu thích.</p>

        <!-- Nút quay lại chọn sản phẩm -->
        <a href="@Url.Action("Index", "SanPham")" class="btn btn-success btn-lg mt-3">
            <i class="fa-solid fa-arrow-left"></i> Chọn sản phẩm
        </a>
    </div>
</div>
