@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h4 class="text-uppercase fw-bold mb-3">Quên mật khẩu</h4>
                <p class="text-muted">Nhập email và tên đăng nhập để khôi phục mật khẩu</p>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">@ViewBag.Message</div>
                }

                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div class="alert alert-danger">@error.ErrorMessage</div>
                }

                <form asp-action="Index" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                        <input type="email" name="email" class="form-control" placeholder="Nhập email" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-envelope"></i> Gửi liên kết khôi phục
                        </button>
                    </div>

                    <p class="mt-3 text-danger fw-bold">* Bắt buộc điền thông tin</p>
                    <p class="mt-2 text-center">
                        Quay lại <a asp-action="Login" asp-controller="Home">Đăng nhập</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
