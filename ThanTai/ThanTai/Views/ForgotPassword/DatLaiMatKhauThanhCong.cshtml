@{
    ViewBag.Title = "Đặt lại mật khẩu thành công";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4 border-success">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h2 class="card-title mb-3 text-success">Đặt lại mật khẩu thành công!</h2>
                    <p class="card-text mb-4">Bạn có thể đăng nhập với mật khẩu mới ngay bây giờ.</p>
                    <a href="@Url.Action("Login", "Home")" class="btn btn-success btn-lg rounded-pill px-4">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

