@model DatLaiMatKhauViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4 shadow">
                <h4 class="text-uppercase fw-bold mb-3">Đặt lại mật khẩu</h4>
                <p class="text-muted">Vui lòng nhập mật khẩu mới của bạn</p>

                <form asp-action="DatLaiMatKhau" method="post">
                    <input type="hidden" asp-for="Token" value="@ViewBag.Token" />

                    <div class="mb-3">
                        <label asp-for="MatKhauMoi" class="form-label fw-bold">Mật khẩu mới <span class="text-danger">*</span></label>
                        <input asp-for="MatKhauMoi" type="password" class="form-control" placeholder="Nhập mật khẩu mới" required />
                        <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="XacNhanMatKhau" class="form-label fw-bold">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                        <input asp-for="XacNhanMatKhau" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
                        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-key"></i> Xác nhận
                        </button>
                    </div>

                    <p class="mt-3 text-danger fw-bold">* Bắt buộc điền thông tin</p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
